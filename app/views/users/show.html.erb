<p style="color: green"><%= notice %></p>

<%= render @user %>

<div>
  <%= link_to "Edit this user", edit_user_path(@user) %> |
  <%= link_to "Back to users", users_path %>

  <%= button_to "Destroy this user", @user, method: :delete %>
</div>

<% @user.microposts.each.with_index(1) do |micropost, i| %>
  <div>
    <%= "投稿#{i}" %>
    <%= render micropost %>
  </div>
<% end %>
